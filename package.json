{
	"name": "polkadot-js-api-ts-template",
	"version": "0.1.0",
	"description": "A template project to kickstart hacking on top of @polkadot/api, using typescript",
	"main": "./build/index.js",
	"scripts": {
		"clean": "./node_modules/.bin/rimraf build",
		"dev": "./node_modules/.bin/tsc --pretty --declaration --watch",
		"update": "./node_modules/.bin/ncu -u && yarn",
		"lint": "eslint . --ext .ts --fix",
		"format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
		"build": "npm run clean && ./node_modules/.bin/tsc --pretty --declaration"
	},
	"author": "@kianenigma",
	"license": "ISC",
	"devDependencies": {
		"@babel/cli": "^7.18.10",
		"@babel/core": "^7.18.13",
		"@babel/preset-typescript": "^7.18.6",
		"@types/node": "^18.7.13",
		"@types/yargs": "^17.0.11",
		"@typescript-eslint/eslint-plugin": "^5.35.1",
		"@typescript-eslint/parser": "^5.35.1",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"prettier": "^2.7.1",
		"ts-loader": "^9.3.1",
		"ts-node": "^10.9.1",
		"typescript": "4.8.2"
	},
	"dependencies": {
		"@polkadot/api": "9.2.4",
		"yargs": "^17.5.1"
	}
}
